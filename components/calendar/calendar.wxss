.calendar-head {
	display: flex;
	flex-direction: row;
	justify-content: center;
	padding: 10px;
	height: 70px;
	background-color: rgb(90, 106, 121);
}
.calendar-title {
	width: 120px;
	height: 60px;
	display: flex;
	align-items: center;
	text-align: center;
	font-size: 20px;
	color: white;
}
.calendar-btn{
	height: 60px;
	width: 60px;
	background-color: grey;
	margin: 0 10px;
	border-radius: 10px;
	background-position: center;
	background-size: 70%;
	background-repeat: no-repeat;
}
.calendar-btn:active {
	background-color: rgb(58, 58, 58);
}
.week-box {
	background-color: wheat;
	color: royalblue;
	text-align: center;
	padding: 6px 0;
}
.curr-month {
	width: 100%;
	height: 100%;
	background-color: white;
	color: grey;
}
.other-month {
	width: 100%;
	height: 100%;
	background-color: grey;
	color: white;
}
.calendar-box {
	width: 100%;
	height: 50px;
	padding: 1px 0;
}
.calendar-box-selected {
	background-color: rgb(201, 191, 136);
	color: rgb(180, 76, 76)
}
.calendar-column {
	width: 13.5%;
	padding: 0 1px;
}
.calendar-table {
	display: flex;
	flex-direction: row;
	justify-content: center;
	width: 100%;
	padding: 4px 0;
	height: fit-content;
	background-color: thistle;
}
.calendar-swiper {
	height: 350px;
}