.event-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.event-list-item{
  padding-top: 10px;
  height: fit-content;
  width: calc(50vw - 6px);
  background-color: rgb(250, 250, 250);
  margin: 3px;
  border-radius: 4px;
  box-shadow: 1px 0px 10px rgb(82, 82, 82);
}
.event-list-item-img {
  height: 140px;
  width: 100%;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}
.event-list-item-info {
  color: grey;
  padding: 4px 6px;
}
.event-list-item-user {
  width: fit-content;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 10px;
  padding: 2px;
  background-color: lightblue;
  border-radius: 12px;
  margin: 4px;
}
.event-list-item-username{
  margin: 0 4px;
}
.event-list-item-avatar {
  height: 20px;
  width: 20px;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  border-radius: 50%;
}
.event-list-item-row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 10px;
}
.event-list-item-location {
  background-color: cadetblue;
  color: white;
  padding: 2px;
  margin-right: 4px;
}
.event-list-item-time {
  background-color: darkgray;
  color: white;
  padding: 2px;
}